<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmerHouse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#cc9f53</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FarmerHouse.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="Theme.FarmerHouse.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FarmerHouse.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Style_TextView">
        <item name="fontFamily">@font/helv</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="paddingStart">20dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">

        <item name="android:textAllCaps">true</item>


        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/helv</item>
    </style>
</resources>