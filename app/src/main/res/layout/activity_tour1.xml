<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="2"
    android:background="@color/app_brown"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Tour1">


    <TextView
        android:id="@+id/text1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/helv"
        android:text="ما هي أبرز نشاطاتك؟"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28dp"></TextView>

    <ImageView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"


        android:layout_marginTop="30dp"


        android:src="@drawable/ic_dash"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ir_sharp"
            android:layout_centerHorizontal="true"
            android:id="@+id/text2"
            android:layout_marginTop="30dp"
            android:textAlignment="center"

            android:layout_below="@+id/dash"
            android:text="أضفها لحسابك الخاص"
            android:textColor="@color/white"
            android:textSize="17dp"></TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image1"

        android:layout_marginTop="90dp"
       android:layout_below="@id/text2"





        android:src="@drawable/tour_1_image"></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp"

        android:src="@drawable/pager_1"></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
android:scaleType="centerCrop"

            android:src="@drawable/splash_model"></ImageView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tour1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_button"
android:textColor="@color/black"
        android:fontFamily="@font/ir_sharp"
        android:text="التالي"

        android:textAlignment="center"
        android:textSize="17dp"></androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>



