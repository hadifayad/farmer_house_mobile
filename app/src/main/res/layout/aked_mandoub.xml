<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_green"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MandoobAkedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressView"


            android:layout_alignParentTop="true"
            android:layout_marginTop="29dp"
            android:fontFamily="@font/helv"
            android:text=" عقد مع المزارع"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp"></TextView>

        <ImageView
            android:id="@+id/dash2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_centerHorizontal="true"



            android:layout_marginTop="30dp"


            android:src="@drawable/ic_dash"></ImageView>



        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="المزارع"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <Spinner
            android:id="@+id/activity_farmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:layout_centerHorizontal="true"
            android:hint="المزارع"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:gravity="center"

            android:textAlignment="center"

            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></Spinner>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/activity_farmer"


            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="الاسم الكامل"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>
        <TextView
            android:id="@+id/fullnameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
           android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:gravity="center"
            android:hint="الاسم الكامل"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullnameView"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="البلدة"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <TextView
            android:id="@+id/SearchableSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:textColorHint="#808080"
            android:textSize="17dp"
            app:hintText="اختر القرية" />

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SearchableSpinner"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="رقم الهاتف "
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title3"

            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:gravity="center"
            android:hint="رقم الهاتف"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="البريد الالكتروني"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title4"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:gravity="center"
            android:hint="البريد الالكتروني"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/title5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="العنوان التفصيلي"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <TextView
            android:id="@+id/addressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title5"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:gravity="center"
            android:hint="العنوان التفصيلي"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/title6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressView"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="نوع المنتج"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <EditText
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title6"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:gravity="center"
            android:hint="نوع المنتج"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></EditText>

        <TextView
            android:id="@+id/title7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="مكان الزراعة"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <EditText
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title7"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:gravity="center"
            android:hint="مكان الزراعة"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></EditText>

        <TextView
            android:id="@+id/title8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="الكمية"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <EditText
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title8"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:gravity="center"
            android:hint="الكمية"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></EditText>

        <TextView
            android:id="@+id/title9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantity"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="السعر"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <EditText
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title9"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:hint="السعر"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></EditText>
        <TextView
            android:id="@+id/title10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="تاريخ التسليم"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <TextView
            android:id="@+id/date_tesleem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title10"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:gravity="center"
            android:hint="تاريخ التسليم"
            android:onClick="selectDate"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/title11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_tesleem"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="مكان التسليم"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <EditText
            android:id="@+id/place_tesleem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title11"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:hint="مكان التسليم"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></EditText>
        <TextView
            android:id="@+id/title12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_tesleem"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="ملاحظات"
            android:textAlignment="center"

            android:textColor="@color/white"


            android:textSize="17dp"></TextView>


        <EditText
            android:id="@+id/notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title12"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/ir_sharp"
            android:hint="ملاحظات"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></EditText>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:background="@drawable/ic_button_register"
            android:fontFamily="@font/ir_sharp"
            android:text="حفظ"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17dp"></androidx.appcompat.widget.AppCompatButton>


    </RelativeLayout>
</ScrollView>