<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_green"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_button"
        android:fontFamily="@font/ir_sharp"

        android:hint="ادخل من خلال رقم هاتفك"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#808080"

        android:textSize="17dp"></EditText>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-7dp"
        android:background="@drawable/ic_button_register"
        android:fontFamily="@font/ir_sharp"
        android:text="تسجيل دخول"
android:layout_below="@id/phone"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17dp"></androidx.appcompat.widget.AppCompatButton>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"


        android:src="@drawable/splash_model"></ImageView>


</RelativeLayout>