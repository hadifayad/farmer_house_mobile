<RelativeLayout android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:background="@color/app_green"
xmlns:android="http://schemas.android.com/apk/res/android"
tools:context=".WhoActivity">






    <TextView
        android:id="@+id/daleell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        android:text="@string/who"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/ir_sharp"

        android:textAlignment="center"
        android:textColor="@color/white"

        android:textColorHint="#808080"
        android:textSize="16dp"></TextView>
    <TextView
        android:id="@+id/txt2"
        android:layout_below="@id/daleell"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"


        android:text="@string/who2"

        android:fontFamily="@font/ir_sharp"

        android:textAlignment="center"
        android:textColor="@color/white"

        android:textColorHint="#808080"
        android:textSize="16dp"></TextView>
    <TextView
        android:id="@+id/txt3"
        android:layout_below="@id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="@string/who3"

        android:fontFamily="@font/helv"

        android:textAlignment="center"
        android:textColor="@color/white"

        android:textColorHint="#808080"
        android:textSize="20dp"></TextView>>


    <!--<androidx.appcompat.widget.AppCompatButton-->
    <!--    android:id="@+id/sell"-->


<ImageView
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_alignParentBottom="true"


    android:src="@drawable/splash_model"></ImageView>
</RelativeLayout>