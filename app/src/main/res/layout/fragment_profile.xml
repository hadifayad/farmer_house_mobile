<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:id="@+id/lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/app_green"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"



                android:fontFamily="@font/helv"
                android:text="ملف المزارع"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="28dp"></TextView>

            <ImageView

                android:id="@+id/editProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"


                android:src="@drawable/ic_edit_solid"
                android:tint="@color/white"></ImageView>

        </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/app_green_light"
        ></RelativeLayout>



        <ImageView
            android:id="@+id/dash2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay"
            android:layout_centerHorizontal="true"


            android:backgroundTint="@color/app_green_light"
            android:layout_marginTop="30dp"


            android:src="@drawable/ic_dash"></ImageView>

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"
            android:layout_below="@id/dash2"

            android:fontFamily="@font/helv"
            android:text="الاسم الكامل"
            android:textAlignment="center"

            android:textColor="@color/black"


            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/fullnameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:layout_centerHorizontal="true"
            android:gravity="center"

            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:backgroundTint="@color/app_green_light"
            android:fontFamily="@font/ir_sharp"
            android:hint="الاسم الكامل"
            android:textAlignment="center"

            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/titl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullnameView"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="المندوب المسؤول"
            android:textAlignment="center"

            android:textColor="@color/black"


            android:textSize="17dp"></TextView>


        <TextView
            android:id="@+id/mandoob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titl"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:backgroundTint="@color/app_green_light"
            android:fontFamily="@font/ir_sharp"
            android:hint="المندوب المسؤول"
            android:textAlignment="center"
            android:gravity="center"

            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>



        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mandoob"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="البلدة"
            android:textAlignment="center"

            android:textColor="@color/black"


            android:textSize="17dp"></TextView>


        <TextView
            android:id="@+id/SearchableSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:backgroundTint="@color/app_green_light"
            android:fontFamily="@font/ir_sharp"
            android:hint=" القرية"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SearchableSpinner"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="رقم هاتف احتياطي"
            android:textAlignment="center"

            android:textColor="@color/black"


            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/secondPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title3"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:backgroundTint="@color/app_green_light"
            android:fontFamily="@font/ir_sharp"
            android:hint="رقم هاتف احتياطي"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondPhone"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="البريد الالكتروني"
            android:textAlignment="center"

            android:textColor="@color/black"


            android:textSize="17dp"></TextView>


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title4"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_button"
            android:backgroundTint="@color/app_green_light"
            android:fontFamily="@font/ir_sharp"
            android:hint="البريد الالكتروني"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>

        <TextView
            android:id="@+id/title5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="5dp"

            android:fontFamily="@font/helv"
            android:text="العنوان التفصيلي"
            android:textAlignment="center"

            android:textColor="@color/black"


            android:textSize="17dp"></TextView>


        <TextView
            android:id="@+id/addressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title5"


            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/ic_button"
            android:backgroundTint="@color/app_green_light"
            android:fontFamily="@font/ir_sharp"
            android:hint="العنوان التفصيلي"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:textSize="17dp"></TextView>

    </RelativeLayout>
</ScrollView>