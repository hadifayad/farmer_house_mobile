<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_green"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
     android:id="@+id/mytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

    android:layout_alignParentTop="true"
  android:text="تغيير كلمة المرور"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/hel1"
   android:layout_marginTop="20dp"

        android:textAlignment="center"
        android:textColor="@color/white"

        android:textSize="26dp"></TextView>
    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
     android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mytitle"
        android:layout_marginTop="50dp"

        android:layout_centerHorizontal="true"

        android:layout_gravity="center_vertical"
        android:layout_marginLeft="0dp"

        android:layout_marginBottom="10dp"
        android:backgroundTint="#9a9a9a"
        app:ccpDialog_textColor="@color/black"
        app:ccp_arrowSize="16dp"
        app:ccp_defaultPhoneCode="961"

        app:ccp_clickable="false"
        app:ccp_autoDetectLanguage="true"
        app:ccp_autoDetectCountry="false"

        app:ccp_contentColor="@color/black"
        app:ccp_defaultLanguage="ARABIC"
        app:ccp_textSize="16dp"


        tools:ignore="MissingConstraints"></com.hbb20.CountryCodePicker>

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ccp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_button"
        android:fontFamily="@font/ir_sharp"

        android:hint="ادخل  رقم هاتفك"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        android:textSize="17dp"></EditText>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/resetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"

        android:layout_centerInParent="true"
        android:layout_marginBottom="-7dp"
        android:background="@drawable/ic_button_register"
        android:fontFamily="@font/ir_sharp"
        android:text="تغيير كلمة المرور"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17dp"></androidx.appcompat.widget.AppCompatButton>
    <TextView
        android:id="@+id/processText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"


        android:src="@drawable/splash_model"></ImageView>
</RelativeLayout>