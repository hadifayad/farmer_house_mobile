<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F3F4"
 >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أنشطتي"
            android:layout_centerInParent="true"
            android:fontFamily="@font/helv"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="إضافة نشاط"
            android:layout_marginRight="20dp"
            android:id="@+id/addActivity"
            android:background="@drawable/ic_button"></androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mandoobActivitiesRecyclerView"></androidx.recyclerview.widget.RecyclerView>



</LinearLayout>